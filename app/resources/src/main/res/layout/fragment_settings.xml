<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/settings_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:text="@string/settings_header"
            android:textColor="@color/textPrimary"
            android:textSize="35sp"
            app:fontFamily="@font/inter_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/element_background"
            android:layout_marginBottom="10dp"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/settings_appicon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/ic_launcher_foreground"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"
                    app:fontFamily="@font/inter_bold" />

                <TextView
                    android:id="@+id/settings_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textSecondary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/settingsheader_feed"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:fontFamily="@font/inter_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:divider="@color/element_border"
            app:dividerPadding="10dp"
            app:showDividers="middle"
            android:background="@drawable/element_background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/settings_openFeedSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/feedsettings_header"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/open_articles_in_browser"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_articleinbrowser"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_showsearch"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_show_search"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/remember_sorting"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_remember_sorting"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/settings_sorting_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sorting_mode"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <TextView
                    android:id="@+id/sorting_mode_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/sorting_mode_arrow"
                    android:textColor="@color/textSecondary" />

                <View
                    android:id="@+id/sorting_mode_arrow"
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/settings_theme"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:fontFamily="@font/inter_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/element_background"
            android:layout_marginBottom="10dp"
            app:divider="@color/element_border"
            app:dividerPadding="10dp"
            app:showDividers="middle"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/settings_themesettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:text="@string/settings_theme"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <TextView
                    android:id="@+id/theme_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/theme_arrow"
                    android:textColor="@color/textSecondary" />

                <View
                    android:id="@+id/theme_arrow"
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_headertypesettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_headertype"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <TextView
                    android:id="@+id/headertype_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/headertype_arrow"
                    android:textColor="@color/textSecondary" />

                <View
                    android:id="@+id/headertype_arrow"
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/settings_headersizesettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_headersize"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <TextView
                    android:id="@+id/headersize_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/headersize_arrow"
                    android:textColor="@color/textSecondary" />

                <View
                    android:id="@+id/headersize_arrow"
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/settingsheader_functionality"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:fontFamily="@font/inter_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divider="@color/element_border"
            app:dividerPadding="10dp"
            app:showDividers="middle"
            android:background="@drawable/element_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/haptics"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_haptics"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/settings_launchwindowsettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_launchwindow"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <TextView
                    android:id="@+id/launchwindow_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/launchwindow_arrow"
                    android:textColor="@color/textSecondary" />

                <View
                    android:id="@+id/launchwindow_arrow"
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/show_changelog"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_showchangelog"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/cache_images"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/animate_clicks"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_animateclicks"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/settingsheader_article"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:fontFamily="@font/inter_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:divider="@color/element_border"
            app:dividerPadding="10dp"
            app:showDividers="middle"
            android:background="@drawable/element_background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/settings_fontsettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:text="@string/settings_font"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <TextView
                    android:id="@+id/fontsettings_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/fontsettings_arrow"
                    android:textColor="@color/textSecondary" />

                <View
                    android:id="@+id/fontsettings_arrow"
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:text="@string/settings_fontsize"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.slider.Slider
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:valueFrom="12"
                    android:valueTo="20"
                    android:stepSize="1"
                    android:layout_alignParentRight="true"
                    android:id="@+id/slider_fontsize"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/articles_fullscreen"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_articlefullscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/article_show_controls"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_article_showcontrols"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/article_show_categories"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_article_showcategories"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/show_image_viewer_gradient"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_image_viewer_gradient"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/import_export"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:fontFamily="@font/inter_medium" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divider="@color/element_border"
            app:dividerPadding="10dp"
            app:showDividers="middle"
            android:background="@drawable/element_background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/settings_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/import_sources"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/export_sources"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"
                    app:fontFamily="@font/inter_semibold" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow"
                    android:backgroundTint="@color/white"
                    android:rotation="180" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/import_export_desc"
            android:textColor="@color/textSecondary"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/settings_sendMail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/element_background"
                android:padding="10dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_email"
                    android:backgroundTint="@color/textPrimary"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_createIssue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/element_background"
                android:padding="10dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_github"
                    android:backgroundTint="@color/textPrimary"/>
            </RelativeLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/copyright"
