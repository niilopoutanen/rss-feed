<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <com.niilopoutanen.rss_feed.common.IconView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/extended_header_icon"
            android:layout_marginEnd="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/extended_header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    app:fontFamily="@font/inter_bold"
                    android:textSize="25sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_weight="1"/>

                <View
                    android:id="@+id/feed_dropdown"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_menu"
                    android:backgroundTint="@color/textPrimary"
                    android:rotation="90"/>
            </LinearLayout>


            <TextView
                android:id="@+id/extended_header_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                app:fontFamily="@font/inter_medium"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

    <com.niilopoutanen.rss_feed.common.SearchBar
        android:id="@+id/feed_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>