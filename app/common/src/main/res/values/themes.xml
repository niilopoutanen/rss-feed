<resources>
    <!-- Base application theme. -->
    <style name="RSSFeedStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/colorAccent</item>

        <item name="android:statusBarColor">@color/windowBg</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/windowBg</item>
        <item name="android:navigationBarColor">@color/windowBg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColorLink">?attr/colorAccent</item>
        <item name="colorAccent">#0075FF</item>
        <item name="colorSecondaryContainer">@color/element</item>

        <!-- MaterialSwitch -->
        <item name="colorSurfaceVariant">@color/surface</item>
        <item name="colorOutline">#CBC9D1</item>
    </style>

    <style name="RSSFeedStyle.NavActive" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/surface</item>
    </style>
</resources>